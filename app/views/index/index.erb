<div class="grid-x">

  <div class="cell small-3" id="sidebar">
    <h3>Player</h3>
    <ol>
      <li>One</li>
      <li>Two</li>
      <li>three</li>
    </ol>
  </div>

  <div class="cell small-9" id="main">
    <h1>Songs</h1>

    <table>
      <thead>
        <tr>
          <th>Tile</th>
          <th>Artist</th>
          <th>Album</th>
        </tr>
      </thead>
      <tbody>
        <% @songs.each do |song| %>
            <tr class='song_row'          >
              <td><a href="#"><%= song.name %></a></td>
              <td><a href="#"><%= song.artist.name %></a></td>
              <td><a href="#"><%= song.album.name %></a></td>
            </tr>
        <% end %>
      </tbody>

    </table>
  </div>

  <div class="cell" id="player">
    <div class="grid-x">
      <div class="cell small-2 info">
        <h1>Player</h1>
      </div>
      <div class="cell small-8 controls">
        <div id="backwardBtn"><i class="fas fa-backward" "></i></div>
        <div id="playBtn"><i class="fas fa-play" "></i></div>
        <div id="pauseBtn"><i class="fas fa-pause" "></i></div>
        <div id="forwardBtn"><i class="fas fa-forward" "></i></div>
      </div>
      <div class="cell small-2 vol">
        <input type="range" min="1" max="100" value="50" id="vol">
      </div>
    </div>
  </div>

</div>

